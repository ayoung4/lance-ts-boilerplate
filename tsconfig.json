{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": false,
        "baseUrl": "./src",
        "paths": {
            "Client/*": [
                "client/*"
            ],
            "Server/*": [
                "server/*"
            ],
            "Common/*": [
                "common/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}